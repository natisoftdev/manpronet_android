<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_attracco_db" >
        <EditTextPreference
            	android:title="@string/pref_stringa_connessione" 
            	android:summary="@string/pref_stringa_connessione_summary" 
            	android:key="prefDBStringa"
            	android:singleLine="true"
    			android:maxLines="1"	
    			android:inputType="text|textEmailAddress"
    			android:capitalize="none"
            	/>

        <EditTextPreference
            android:title="@string/pref_login"
            android:summary="@string/pref_login_summary"
            android:key="prefDBUsername"
            android:inputType="text" />

        <EditTextPreference
            android:title="@string/pref_pwd"
            android:summary="@string/pref_pwd_summary"
            android:key="prefDBPassword"
            android:inputType="textPassword" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/barCompressioneImg_title" >
        <SeekBarPreference
            android:key="livCompress"
            android:title="@string/barCompressioneImg_summary"
            android:max="100"
            android:defaultValue="60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </PreferenceCategory>

