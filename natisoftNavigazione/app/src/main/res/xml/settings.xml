        </CheckBoxPreference>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="prefControlliNfc"
            android:summary="@string/pref_controllo_avvio_summary"
            android:title="@string/pref_controllo_avvio_nfc" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefControlliFullScreen"
            android:summary="@string/pref_fullscreen_summary"
            android:title="@string/pref_fullscreen_title" >
        </CheckBoxPreference>
    </PreferenceCategory>

